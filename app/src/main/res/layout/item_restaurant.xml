<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Consider constraintlayout or relative layout to get rid of nested layout in listview
    but beware localized text expansion-->
    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/imageViewLogo"
        android:scaleType="fitCenter"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:contentDescription="@string/restaurant_logo_content_description" />

    <!-- TODO: use dimens files -->
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewStatus"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>